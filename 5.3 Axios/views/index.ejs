<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css">
  <title>I'm Bored</title>
</head>

<body>
  <div class="container">
    <h1>Let's do some trivia! ✌️</h1>

    <form action="/" id="form" class="form" method="POST">
      <select name="category" class="form-select">
        <option value="" data-display="Select">Random Category</option>
        <option value="10">Entertainment: Books</option>
        <option value="21">Sports</option>
        <option value="12">Music</option>
      </select>
      <select name="questions" class="form-select">
        <option value="5">Number of Questions?[Default 5]</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
      </select>
      <button type="submit" class="form-submit">Go</button>
    </form>
    <section id="cards" class="cards">
      <div class="container">
      <% if (locals.data ) { %>
        <h2>Trivia Questions</h2>
        <% data.forEach((question, index) => { %>
          <p><%= question.question %></p>
          <form action="/answer" method="POST">
            <input type="hidden" name="questionIndex" value="<%= index %>">
            <div class="button-ans-container">
              <button type="submit" class="button-ans" name="selectedAnswer" value="True"><span>True</span></button>
              <button type="submit" class="button-ans" name="selectedAnswer" value="False"><span>False</span></button>
            </div>
          </form>
        <% }) %>
      <% }%>
    </div>
        <% if (locals.error) { %>
          <div id="tag-error" class="tag-error">
            <%error%>
          </div>
          <% } %>

    </section>
  </div>

</body>

</html>